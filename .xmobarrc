Config { font = "xft:Ricty-10:bold"
       , bgColor = "black"
       , fgColor = "gray"
       , position = Top
       , lowerOnStart = False
       , commands = [ Run Network "wlp3s0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Network "enp4s0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory [ "-t" , "Mem:<usedratio>%" ] 10
                    , Run Swap [] 10
                    , Run Battery ["-t","<left>%"] 10
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{%cpu%<fc=#0099CC>|</fc>%memory%*%swap%<fc=#0099CC>|</fc>%wlp3s0%<fc=#0099CC>|</fc><fc=#ee9a00>%date%</fc><fc=#0099CC>|</fc>%battery%"
      }
